{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Karun",
            "command": "karun.cmd",
            "args": [
                "-r",
                "--css:../src/head.html",
                "../src/soshalthing.nim"
            ],
            "options": {
                "cwd": "${workspaceRoot}/bin"
            },
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Kawatch",
            "command": "karun.cmd",
            "args": [
                "-r",
                "-w",
                "--css:../src/head.html",
                "../src/soshalthing.nim"
            ],
            "options": {
                "cwd": "${workspaceRoot}/bin"
            },
            "type": "shell",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Run Server",
            "command": "nimble",
            "args": [
                "proxy"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "type": "shell",
            "group": "build",
            "problemMatcher": []
        }
    ]
}